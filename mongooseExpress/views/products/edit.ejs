<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product</title>
  </head>
  <body>
    <h1>Edit Product</h1>
    <form action="/products/<%=product._id %>?_method=PUT" method="POST">
      <lable for="name">Product Name</lable>
      <input
        type="text"`
        name="name"
        placeholder="product name"
        value="<%=product.name %>" />

      <lable for="price">Pirce (Unit) </lable>
      <input type="number" name="price" placeholder="price" value="<%=product.price %>" />

      <lable for="category">Select Category</lable>
      <select name="category" id="">
        <% for (let category of categories ) { %>
        <option
          value="<%=category %>" <%=product.category === category ? 'selected' : '' %> >
          <%=category %>
        </option>
        <% } %>
      </select>
      <button>Submit</button>
    </form>
    <a href="/products/<%=product._id %>">Cancel</a>
  </body>
</html>
